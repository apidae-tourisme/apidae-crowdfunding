@import "common";

header {
  position: fixed;
  top: 0;
  z-index: 999;
  border-bottom: 1px solid $gray-700;
  background-color: $white;
}

#site_header {
  padding: 1rem 2rem;
  align-items: flex-end;
  height: 9rem;
  flex-wrap: nowrap;

  > :first-child {
    margin-right: 4rem;

    img {
      height: 7rem;
      width: auto;
    }
  }

  > a:not(:first-child) {
    text-decoration: none;
    display: inline-block;
    line-height: 0.8;
    text-align: center;
    margin: 0.5rem 2rem 1.5rem 2rem;
    font-weight: 500;

    &:hover {
      text-decoration: underline;
    }
  }

  .countdown {
    vertical-align: bottom;
    margin-bottom: 1.3rem;
    line-height: 1.2;

    i {
      font-size: 2.2rem;
    }
  }

  .btn {
    padding: 1.2rem 3rem;
    margin: 1rem 1rem 1.5rem 1rem;

    &:hover {
      color: $color-info;
    }
  }
}

#site_content {
  margin-top: 9rem;

  #home_content {
    padding-bottom: 5rem;
    background-image: url(<%= asset_path('hexa_bg.svg') %>);
    background-repeat: no-repeat;
    background-position: bottom right;
    background-size: 35% auto;
  }

  #home_data {
    position: relative;

    #data_bg {
      position: absolute;
      z-index: 0;
      top: 0;
      bottom: 0;
      right: 0;
      left: 0;
    }

    #data_charts {
      position: relative;
      z-index: 1;
    }

    > * > * {
      height: calc(100vh - 15rem);
      min-height: 680px;
    }

    #home_map, #home_charts {
      height: 100%;
    }
  }
}

#home_data {
  #home_map {
    svg {
      .map_region:hover {
        path {
          cursor: pointer;
          stroke-width: 3px;
          filter: drop-shadow(0px 3px 3px rgba(0, 0, 0, 0.4));
        }

        text {
          cursor: pointer;
        }
      }

      text.region_label {
        text-anchor: middle;

        tspan {
          font-size: 12px;

          &.map_text:not(:last-child) {
            font-weight: 500;
          }

          &:last-child {
            font-size: 8px;
          }
        }
      }
    }

    path {
      stroke: $white;
      stroke-width: 1px;

      $map_levels: (0, 1, 2, 3, 4, 5, 6, 7, 8);

      @each $level in $map_levels {
        &.level_#{$level} {
          fill: lighten($color-warning, percentage((8 - $level) / 24));
        }
      }
    }

    .zoomed_text {
      display: none;
      font-size: 8px !important;
    }

    &.zoomed .zoomed_text {
      display: initial;
    }
  }

  #home_charts {
    #rank_chart_wrapper {
      overflow: hidden;

      #rank_filters {
        button {
          border: 1px solid #777;
          font-weight: 300;

          &.active {
            font-weight: 500;
          }

          &:hover, &.active {
            border: 1px solid #FFF;
          }
        }
      }

      #rank_chart {
        margin-bottom: -30px;

        > svg:first-child {
          display: block;
        }

        &.empty_chart {
          margin-left: 0;
        }

        & + button {
          background-color: transparent;
          color: $yellow-500;
          display: flex;
          margin: 1rem auto;
          align-items: center;
          font-weight: normal;

          &:hover {
            color: $color-warning;
          }
        }

        .c3-axis.c3-axis-y {
          display: none;
        }
      }

      a {
        text-decoration: none;
        color: $yellow-500;
        justify-content: center;
        align-items: center;

        &:hover {
          color: $color-warning;
        }
      }
    }

    .c3-text {
      fill: #FFFFFF !important;
      font-size: 16px;
      font-weight: bold;
      font-family: $font-family-base;
    }

    path.domain {
      transform: translate(-20px, -1px);
      fill: none;
      stroke-width: 2;
      stroke: #FFF;
    }

    .c3-axis-x {
      fill: white;
      transform: translate(20px, 1px) !important;
      clip-path: none !important;

      text {
        font-size: 14px;
        font-weight: 500;
        font-family: $font-family-base;
        text-anchor: start !important;
      }
    }

    .c3-chart-arc {
      path {
        stroke-width: 3;
      }
      text {
        font-size: 12px;
        font-weight: 500;
        font-family: $font-family-base;
      }
    }

    #pie_chart_wrapper {

      #pie_legend {
        .legend_item {
          max-width: 100%;

          button {
            align-content: center;
            align-items: center;
            display: flex;
            width: 100%;
            background-color: rgba(255, 255, 255, 0.15);
            border-bottom: none;
            border-top: none;
            border-right: none;
            border-left: 3px solid;
            margin-bottom: 5px;
            padding: 5px;

            &:hover {
              cursor: pointer;
              background-color: rgba(255, 255, 255, 0.3);
            }

            &.active {
              &.mo { background-color: #F97E7E; }
              &.ct { background-color: #74C5EA; }
              &.at { background-color: #FFC302; }
              &.sr { background-color: #FB71A7; }
              &.fs { background-color: #9D9D9C; }
              &.sa { background-color: #BDD07B; }
              &.sp { background-color: #00B1C6; }

              span:first-child {
                color: white !important;
              }
            }

            span:first-child {
              font-size: 2rem;
              padding-right: 5px;
            }

            span:last-child {
              font-size: 1.1rem;
            }
          }
        }
      }
    }
  }
}

#home_figures {
  p {
    line-height: 1.1;
  }

  #ratio_figure {
    .fl {
      border: 1px solid $white;
      border-radius: 5px;
      width: 120px;
      height: 40px;
      margin: 0.5rem 1rem 0.5rem 0;
      background: linear-gradient(90deg, #FFFFFF 50%, transparent 50%);
    }
  }
}

#home_phases {
  .grid-4 > div {
    background-image: url(asset_path('hexa_white.svg'));
    background-position: center;
    background-repeat: no-repeat;
    background-size: auto 100%;
    position: relative;

    i {
      font-size: 4rem;

      &.fas, &.fa {
        font-size: 3rem;
        padding-bottom: 0.8rem;
      }
    }

    &:not(:last-child):after {
      content: "";
      position: absolute;
      width: 60%;
      height: 64px;
      background-image: url(asset_path('dots_transition.svg'));
      background-repeat: no-repeat;
      background-size: 100% auto;
      background-position: center;
      top: -25px;
      left: 70%;
      z-index: 3;
    }
  }

  > div > div:last-child {
    margin-bottom: -64px;
  }
}

#home_why, #home_news {
  a {
    text-decoration: none;
    display: block;

    &:hover {
      background-color: #efefef;
    }
  }
}

#home_news {
  img {
    height: 240px;
    object-fit: cover;
    object-position: center;
  }
}

#js-modal {
  .dataTable-bottom, .dataTable-top {
    padding-left: 0;
    padding-right: 0;
  }

  .dataTable-selector {
    padding-right: 2rem;
  }

  .dataTable-sorter {
    &:before {
      opacity: 0.6;
      border-top-color: white;
    }
    &:after {
      opacity: 0.6;
      border-bottom-color: white;
    }
  }

  .dataTable-table {
    > thead > tr > th {
      text-align: center;
    }
  }

  thead > tr > th:last-child {
    a.dataTable-sorter {
      display: none;
    }
  }

  .data_table td {
    vertical-align: middle;
  }
}

#new_subscription, #confirm_subscription, #static_section, #widget_creation {

  #form_wrapper, #confirmation_wrapper {
    background-image: url(<%= asset_path('bee_bg.svg') %>);
    background-repeat: no-repeat;
    background-position: left 20px;
    background-size: 100% auto;
  }
}

#widget_content {
  padding: 5rem 10rem;
  min-height: 60vh;

  h3 {
    align-items: center;
    justify-content: center;
    text-transform: uppercase;
  }

  #widget_code {
    code {
      display: block;
      height: 40px;
      padding: 6px 8px;
      margin-bottom: 5px;
    }

    button {
      border-radius: 0;
    }
  }
}

footer {
  a {
    color: $white;
    text-decoration: none;

    &:hover {
      text-decoration: underline;
      color: $white;
    }
  }

  #media_links {
    a {
      text-decoration: none;
      padding: 0 1rem;

      &:hover {
        color: $link-color-hover;
      }
    }
  }

  #footer_links a {
    padding: 0 3rem;

    &:not(:last-child) {
      border-right: 2px solid $white;
    }

    &:hover {
      color: $link-color-hover;
    }
  }
}